{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "declaration": true,
    "outDir": "www",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/plugin/*"],
  "exclude": ["node_modules", "dist", "./installPeerdeps.ts"],
  "typedocOptions": {
    "entryPoints": ["src/plugin/plugin.ts"],
    "out": "docs",
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "includeVersion": true
  }
}
